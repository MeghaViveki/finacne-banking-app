pipeline {
    agent any

    stages {
        stage('clone') {
            steps {
                git branch: 'main', credentialsId: 'Megha', url: 'https://github.com/MeghaViveki/finacne-banking-app.git'
               
            }

        }
        stage('infra deploy') {
            steps {
               script{
                 sh 'terraform init'
                 sh 'terraform plan'
                 sh 'terraform destroy -auto-approve'
               }
            }

        }
        
    }
}
