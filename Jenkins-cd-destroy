pipeline {
    agent any
    parameters {
        string(name: 'version', defaultValue: 'latest', description: 'Enter the version')
    }

    stages {
        stage('clone') {
            steps {
                git branch: 'main', credentialsId: 'Megha', url: 'https://github.com/MeghaViveki/banking-finance-app.git'
               
            }

        }
        stage('infra deploy') {
            steps {
               script{
                 sh 'terraform init'
                 sh 'terraform plan'
                 sh 'terraform destroy -y'
               }
            }

        }
        
    }
}